@model Reveries.ViewModels.HomeSearchCards
@{
    Layout = null;
}


@foreach (var user in Model.Users)
{

    <div class="card">
        <div class="blurring dimmable image">
            <div class="ui dimmer">
                <div class="content">
                    <div class="center">
                        <a href="@Url.RouteUrl("User",new { username = user.Username })"><div class="ui inverted button">View Profile</div></a>
                    </div>
                </div>
            </div>
            <img src="img/tom.jpg">
        </div>
        <div class="content">
            <a class="header">@user.Name</a>
            <div class="meta">
                <span class="date">@user.Username</span>
            </div>
            <div class="description">
                @user.About
            </div>
        </div>
        <div class="extra content">
            <span class="right floated">
                Joined in @user.RegisterDate.ToShortDateString()
            </span>

        </div>
    </div>

}

<script>

    $('.special.cards .image').dimmer({
        on: 'hover'
    });

</script>