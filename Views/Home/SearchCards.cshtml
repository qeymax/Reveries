@model Reveries.ViewModels.HomeSearchCards
@{
    Layout = null;
}

@foreach (var user in Model.Users)
{

    <div class="col s4">
        <a href="#">
            <div class="card medium">
                <div class="card-image">
                    <img src="img/logoNoText.png">
                </div>

                <div class="card-content">
                    <span class="card-title">@user.Name</span>
                    <p style="color:gray; font-size:20px;">@user.Username</p>
                    <p style="color:black">
                        @user.About
                    </p>
                </div>
            </div>
        </a>
    </div>

}
